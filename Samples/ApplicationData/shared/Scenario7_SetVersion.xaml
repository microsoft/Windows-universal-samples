<Page x:Class="SDKTemplate.Scenario7_SetVersion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock TextWrapping="Wrap" Style="{StaticResource BasicTextStyle}">
                Versioning enables you to change the application data format used in a
                future release of your app without causing compatibility problems with
                previous releases of your app.
            </TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="SetVersion0" Content="Set version to 0" Margin="0,0,10,0" Click="SetVersion0_Click"/>
                <Button x:Name="SetVersion1" Content="Set version to 1" Margin="0,0,10,0" Click="SetVersion1_Click"/>
            </StackPanel>
            <TextBlock x:Name="OutputTextBlock" Style="{StaticResource BasicTextStyle}"/>
        </StackPanel>
    </ScrollViewer>
</Page>
