<Page 
    x:Class="SDKTemplate.Scenario0_Choose" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
            <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" Text="Choose accelerometer"/>
            <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">Choose the accelerometer to be used by the other scenarios.</TextBlock>
            <ComboBox x:Name="ReadingTypeComboBox" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Page>