<Page
    x:Class="SDKTemplate.Scenario11"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
            <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
            <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap">
                To try to retrieve the file 'sample.dat', click 'Get File'.
                The TryGetItemAsync method does not throw an exception if it cannot get the file.
            </TextBlock>

            <Button Content="Get File" Click="GetFileButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
