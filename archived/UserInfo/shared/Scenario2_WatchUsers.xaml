<Page
    x:Class="SDKTemplate.Scenario2_WatchUsers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="12,10,12,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
                <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap">
                    Maintain a list of users with a UserWatcher
                </TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="StartButton" Content="Start watching" Click="{x:Bind StartWatching}" Margin="0,0,10,0"/>
                    <Button x:Name="StopButton" Content="Stop watching" Click="{x:Bind StopWatching}" Margin="0,0,10,0" IsEnabled="False"/>
                </StackPanel>
                <ListBox x:Name="UserList" ItemsSource="{x:Bind Users}" DisplayMemberPath="DisplayName"
                         Margin="0,10,0,0" Width="300" HorizontalAlignment="Left"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
